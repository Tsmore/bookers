<h1 class="index-heading">Books</h1>

<table>
  <thead>
    <tr>
      <th class="index-section-heading">Title</th>
      <th class="index-section-heading">Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="index-contents"><%= book.title %></td>
        <td class="index-contents"><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id), class: "link-class" %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id), class: "link-class" %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data: {confirm: "Are you sure?"}, class: "link-class" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="index-heading index-new-book">New Book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation" class="error-message">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="error-message-each"><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
<% end %>

<%= form_with model: Book.new do |f| %>
<table>
  <tbody>
    <tr>
      <td>
        <label for="book_title" class="always-apply <%= 'label-error' if @book.errors[:title].present? %>">Title</label><br>
        <%= f.text_field :title, class: ("field-with-errors" if @book.errors[:title].present?) %>
      </td>
    </tr>
    <tr>
      <td>
        <label for="book_body" class="always-apply <%= 'label-error' if @book.errors[:body].present? %>">Body</label><br>
        <%= f.text_area :body, class: ("field-with-errors" if @book.errors[:body].present?) %>
      </td>
    </tr>
    <tr>
      <td><%= f.submit 'Create Book' %></td>
    </tr>
  </tbody>
</table>
<% end %>